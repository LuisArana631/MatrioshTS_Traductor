{
  "compileOnSave": true,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./src/assets/js",
    "sourceMap": false,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "removeComments":false,
    "lib": [
      "es2018",
      "dom"
    ]
  },
  "include":[
    "src/assets/ts/**/*"
  ],
  "exclude":[
    "node_modules",
    "src/main.ts",
    "src/polyfills.ts",
    "src/test.ts",
    "src/zone-flags.ts",
    "src/app",
    "www",
    "e2e"
  ],
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true
  }
}